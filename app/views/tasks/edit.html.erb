<% provide(:title, @user.name) %>
<h1>タスク編集</h1>

<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <%= form_with(model: @task, url: user_task_path(current_user),method: :patch, local: true) do |f| %>
      <%= render 'shared/error_messages' %>
      
      <%= f.label :name, class: "label-form" %>
      <%= f.text_field :name, class: "form-control" %>

      <%= f.label :note, class: "label-form" %>
      <%= f.text_area :note, class: "form-control", rows: 5, wrap: "hard" %>
      
      <%= f.submit "更新", class: "btn btn-primary btn-form" %>
      <%= link_to "キャンセル",user_tasks_path(current_user), class: "btn btn-default btn-form" %>
    <% end %>
  </div>
</div> 