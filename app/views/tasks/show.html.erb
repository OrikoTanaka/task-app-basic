<% provide(:title, @user.name) %>
<h1>タスク詳細</h1>

<table class="table table-bordered" id="table-task">
  <tbody>
    <tr>
      <th class="col-md-2"><%= Task.human_attribute_name :id %></th>
      <td><%= @task.id %></td>
    </tr>
    <tr>
      <th><%= Task.human_attribute_name :name %></th>
      <td><%= @task.name %></td>
    </tr>
    <tr>
      <th><%= Task.human_attribute_name :note %></th>
      <td><%= text_url_to_link(safe_join((h(@task.note)).split("\n"),tag(:br))).html_safe %></td>
    </tr>
    <tr>
      <th><%= Task.human_attribute_name :created_at %></th>
      <td><%= l(@task.created_at, format: :long) %></td>
    </tr>
    <tr>
      <th><%= Task.human_attribute_name :updated_at %></th>
      <td><%= l(@task.updated_at, format: :long) %></td>
    </tr>
  </tbody>
</table>

<div>
  <%= link_to "編集", edit_user_task_path(current_user, @task), class: "btn btn-success" %>
  <%= link_to "削除", user_task_path(current_user, @task), method: :delete,
  data: { confirm: "「#{@task.name}」を削除します。よろしいですか？" }, class: "btn btn-danger" %>
</div>