<header class="navbar navbar-fixed-top navbar-default" id="header">
  <div class="container">
    <%= link_to "Task App", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right" id="header-list">
        <li><%= link_to "トップ", root_path %></li>
        <li><%= link_to "ログイン", login_path %></li>
        <% if logged_in? %>
          <li><%= link_to "Users", '#' %></li>
          <li class="dropdown">
            <% if @current_user %>
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <%= @current_user.name %><b class="caret"></b>
              </a>
            <% end %>
            <ul class="dropdown-menu">
              <li><%= link_to "Show", current_user %></li>
              <li><%= link_to "Settings", '#' %></li>
              <li class="divider"></li>
              <li><%= link_to "Log out", logout_path, method: :delete %></li>
            </ul>
          </li>
        <% else %>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
